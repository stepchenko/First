@model QueueStepchenko.Models.Setting

@{

    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
}

<h2>Редактирование настроек</h2>

<div class="divWidth640">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.NextNumberQueue, htmlAttributes: new { @class = "control-label col-md-7" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.NextNumberQueue, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NextNumberQueue, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NumberCall, htmlAttributes: new { @class = "control-label col-md-7" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.NumberCall, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NumberCall, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TimeCall, htmlAttributes: new { @class = "control-label col-md-7" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.TimeCall, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TimeCall, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="OK" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

</div>

<div>
    @Html.ActionLink("Назад", "Index","Home")
</div>